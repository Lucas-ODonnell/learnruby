class Board
    attr_reader :size

    def initialize(n)
        @grid = Array.new(n) {Array.new(n, :N)}
        @size = n * n
    end

    def [](array) #[row, col]
        # row = array[0]
        # col = array[1]
        row, col = array
        @grid[row][col]
    end

    def []=(pos, val)
        row, col = pos
        @grid[row][col] = val
    end

    def num_ships
        #turn 2d array into one big array, check each ele and see if it's :S
        @grid.flatten.count { |ele| ele == :S }
    end

    def attack(position)
        if self[position] == :S 
            self[position] = :H
            puts "you sunk my battleship"
            return true
        else
            self[position] = :X
            return false
        end
    end
  
end
